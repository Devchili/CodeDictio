<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="CustomButton">
        <item name="android:background">#FF6200EE</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <!-- Custom styles for dialog elements -->
    <style name="DialogEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/card_background</item>
        <item name="android:textColor">@color/black</item>

        <item name="android:textSize">16sp</item>
    </style>

    <style name="DialogButton">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:padding">10dp</item>
    <item name="android:backgroundTint">@color/violet</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textSize">16sp</item>
    </style>
</resources>